
void listaPopularidades(Filmes lista){
    int i;
    for (i = 0; i < lista.tamanhoLista; i++) {
        int j, trocar;
        Filme* maiorPop = NULL;
        for(j = i; j < lista.tamanhoLista; j++) {
            if(maiorPop == NULL || lista.lista[j].popularidade > maiorPop->popularidade) {
                maiorPop = &lista.lista[j];
                trocar = j;
            }
        }
        Filme aux = lista.lista[trocar];
        lista.lista[trocar] = lista.lista[i];
        lista.lista[i] = aux;
    }
    for ( i = 0; i < lista.tamanhoLista; i++ ){
        printf("Nome: %s\tPop: %d\tAno: %d\tId: %d\r\n", lista.lista[i].nome, lista.lista[i].popularidade,
                                                     lista.lista[i].ano, lista.lista[i].id);
    }
}